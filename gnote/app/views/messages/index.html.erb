<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Body</th>
      <th>Author hash ip</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.body %>
          <% message.comments.each do |c| %>
            <p>-> <%= c.body %></p>
          <% end %>
        </td>
        <td><%= message.author_hash_ip %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'コメントする', new_comment_path(message.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

