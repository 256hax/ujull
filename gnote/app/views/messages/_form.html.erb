<div class="container">
  <h3 class="orange-text text-darken-3">ほめノートに書く</h3>

  <%= form_with(model: message, local: true) do |form| %>
    <% if message.errors.any? %>
      <div id="error_explanation" class="row">
        <div class="card red lighten-5">
          <div class="card-content red-text">
            投稿できませんでした：
            <ul>
            <% message.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="input-field">
      <%= form.label :body, '今日の自分へのほめ言葉は・・・' %>
      <%= form.text_area :body, class: 'materialize-textarea', onkeyup: 'ShowTextLength(value)' %>

      <div class="section grey-text">
        <span id="inputlength">0</span> / 280文字
      </div>

      <%= button_tag 'ほめノートに書く', type: 'submit', class: 'btn waves-effect waves-light' %>
    </div>
  <% end %>
</div>
